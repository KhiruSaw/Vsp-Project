                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCustId" class="btn btn-primary" data-dismiss="modal">OK</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
