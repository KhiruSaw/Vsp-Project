@using VSPApplication.Models;
@model dynamic
@{
    ViewBag.Title = "FilterOption7620";
    Layout = "~/Views/Shared/_filterView.cshtml";
}


@using (Html.BeginForm("FilterOption8620", "Report", FormMethod.Post, new { id = "Report" }))
{
    @*@Html.AntiForgeryToken()*@



    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <input type="button" id="showDiv" class="btn btn-flat" value="+ Show Filter" />
            </header>
            <div class="panel-body" id="hideDiv">
                <form role="form">
                    <div class="row" >
                        <div class="col-lg-12">
                            <label>Cost Center</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">

                                @Html.DropDownList("CostCenterSFPHD", new List<SelectListItem> {
                                        new SelectListItem {Text="*All Records",Value="*All Records" },
                                        new SelectListItem {Text="Between Range",Value="Between Range" },
                                       new SelectListItem {Text="Exact match",Value="Exact match" },
                                       new SelectListItem {Text="Greater Then",Value="Greater Then" },
                                       new SelectListItem {Text="Less Then",Value="Less Then" },
                                       new SelectListItem {Text="Start With",Value="Start With" },
                                       new SelectListItem {Text="End With",Value="End With" },
                                       new SelectListItem {Text="Contains This",Value="Contains This" },
                                        }, new { @class = "form-control", @id = "ddlCostCenterSFPHD", @onchange = "SelectCostCenterSFPHD()" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">


                                <div class="input-group">
                                    <input type="hidden" id="hdnCostCenterSFPHD" />
                                    <input type="text" id="CostCenter1SFPHD" name="CostCenter1SFPHD" class="form-control" value="@if (ViewBag.Filter == "Run Report Now" || ViewBag.Filter == "Run as a Job and Notify") { @Request["CostCenter1SFPHD"]} else {@ViewBag.CostCenter1}" readonly />

                                    <span class="input-group-btn">
                                        <a id="ccsfphdanchor1" href='' data-toggle="modal" data-target="#myModal">
                                            <button class="btn btn-white" type="button" onclick="FTotalPageCount3('8620', 'Cost Center');"><i class="fa fa-search"></i></button>
                                        </a>
                                    </span>



                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">

                                <div class="input-group">
                                    <input type="text" id="CostCenter2SFPHD" name="CostCenter2SFPHD" class="form-control" value="@if (ViewBag.Filter == "Run Report Now" || ViewBag.Filter == "Run as a Job and Notify") { @Request["CostCenter2SFPHD"]} else {@ViewBag.CostCenter2}" readonly />
                                    <span class="input-group-btn">
                                        <a id="ccsfphdanchor2" href='' data-toggle="modal" data-target="#myModal">
                                            <button class="btn btn-white" type="button" onclick="FTotalPageCount3('8620', 'Cost Center');"><i class="fa fa-search"></i></button>
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div><!--/row-->
                    <div class="row">
                        <div class="col-lg-12">
                            <label>Date</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.DropDownList("DateSFPHD", new List<SelectListItem> {
                 new SelectListItem {Text="*All Records",Value="*All Records" },
                new SelectListItem {Text="Between Range",Value="Between Range" },
               new SelectListItem {Text="Exact match",Value="Exact match" },
               new SelectListItem {Text="Greater Then",Value="Greater Then" },
               new SelectListItem {Text="Less Then",Value="Less Then" },
                }, new { @class = "form-control", @id = "ddlDateEnteredCCM", @onchange = "SelectDateEnteredCCM()" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="input-group" id="DateSFPHDdiv1">
                                    @*<input type="text" id="DateShipped1" name="DateShipped1" value="*All Records" disabled>*@
                                    <input type="text" class="form-control" id="DateSFPHD1" name="DateSFPHD1" value="@ViewBag.DateSFPHD1" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                    @*<span class="input-group-btn" style="display:table-cell;"> </span>*@
                                </div>

                                <div class="input-group" id="DateSFPHDrangeval1" style="width:100%;">
                                    <input type="text" class="form-control" id="DateSFPHDrangevaltext1" name="DateSFPHDrangevaltext1" value="@ViewBag.DateSFPHDrangevaltext1" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                </div>

                            </div>
                        </div>


                        <div class="col-lg-4">
                            <div class="form-group">

                                <div class="input-group" id="DateSFPHDdiv2">
                                    @*<input type="text" id="DateShipped2" name="DateShipped2" value="0" disabled>*@
                                    <input type="text" class="form-control" id="DateSFPHD2" value=@ViewBag.DateSFPHD2 name="DateSFPHD2" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                </div>
                                <div class="input-group" id="DateSFPHDrangeval2" style="width:100%;">
                                    <input type="text" class="form-control" id="DateSFPHDrangevaltext2" name="DateSFPHDrangevaltext2" value="@ViewBag.DateSFPHDrangevaltext2" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>

                                </div>
                            </div>
                        </div>

                    </div><!--/row-->
                </form>
                <div class="col-lg-12">
                    @*<button class="btn btn-primary">Submit</button>*@
                    <input type="submit" class="btn btn-primary" name="filter" id="btnSubmit" value="Run Report Now" />

                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @*<input type="button" class="btn btn-primary " value="Asyn Generate Report" onclick="location.href='@Url.Action("RunReportAsyn", "Report")'" />*@
                    <input type="submit" class="btn btn-primary" name="filter" id="btnSubmit" onclick="return MessageShow()" value="Run as a Job and Notify" />


                </div>


            </div>
        </section>
    </div>


       <!--Report-->
    <div>
        @if (ViewBag.Filter == "Run Report Now")
                {
            <section class="panel">
                <div class="panel-body table-responsive">
                    <div id="reportData" style="width:100%;height:600px;overflow:scroll;">
                        @using ReportViewerForMvc;
                        @{
                            ViewBag.Title = "VSP8620";
                        }

                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { height = "560px", width = "100%" })

                    </div>
                </div>

            </section>
                            }

    </div>
         }


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cost Center</h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12 searchfor">
                    <div class="col-lg-2 searchhead"><h4>Search For</h4></div>
                    <div class="col-lg-3">
                        @Html.DropDownList("CostCenter1", new List<SelectListItem> {
                                            new SelectListItem {Text="Start With",Value="Start With" },
                                             new SelectListItem {Text="End With",Value="End With" },
                                              new SelectListItem {Text="Contains This",Value="Contains This" },
                                             },  new { @id = "ddlCostCenter1", @class = "form-control" })
                    </div>
                    <div class="col-lg-3">
                        @Html.DropDownList("CostCenter2", new List<SelectListItem> {
                                   new SelectListItem {Text="Cost Center ID",Value="Cost Center ID" },
                                   new SelectListItem {Text="Cost Center Name",Value="Cost Center Name" },
                                   new SelectListItem {Text="Class",Value="Class" },
                                   new SelectListItem {Text="Department",Value="Department" },
                                    }, new { @id = "ddlCostCenter2", @class = "form-control" })
                    </div>
                    <div class="col-lg-3">
                        <input type="text" id="txtCostCenterSFPHD" class="form-control" name="txtCostCenterSFPHD" />
                        <input type="hidden" id="hdnCostCenterSFPHD2" />
                    </div>



                </div>

                <table class="table" id="tableSFPHD">
                    <br />
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                Cost Center ID
                            </th>
                            <th>
                                Cost Center Name
                            </th>
                            <th>
                                Class
                            </th>
                            <th>
                                Department
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BO_FilterOption csm in Model.CostCenterMajor2)
                        {
                            <tr>
                                <td>
                                    <input type="radio" name="rdBtn" id="rdBtn" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => csm.CostCenterID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => csm.CostCenterName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => csm.Class)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => csm.Department)
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer modal-footer-new1">

                Page &nbsp; <label type="label" id="Increatement_PageCount_CostCenter">1</label>
                &nbsp; of &nbsp;<label type="label" id="Total_PageCount_CostCenter">0</label> &nbsp; pages

                <span style="margin-left: 390px;">
                    <button type="button" id="0" onclick="F0_tableSFPHD();">First</button>
                    <button type="button" id="-1" onclick="FMinus10_tableSFPHD();"><<</button>
                    <button type="button" id="1" onclick="F1_tableSFPHD();">1</button>
                    <button type="button" id="2" onclick="F2_tableSFPHD();">2</button>
                    <button type="button" id="3" onclick="F3_tableSFPHD();">3</button> &nbsp;&nbsp;. . . . &nbsp;&nbsp;
                    <button type="button" id="+1" onclick="FPluse10_tableSFPHD();">>></button>
                    <button type="button" id="99" onclick="F99_tableSFPHD();">Last</button>
                    <input type="hidden" id="Total_count_tableSFPHD" value="0" />
                    <input type="hidden" id="count_tableSFPHD" />
                    <input type="hidden" id="Total_row_count_tableSFPHD" value="300000" />
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSub" class="btn btn-primary" data-dismiss="modal">OK</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




