@using VSPApplication.Models;
@model dynamic
@{
    ViewBag.Title = "FilterOption7170";
    Layout = "~/Views/Shared/_filterView.cshtml";
}

@using (Html.BeginForm("FilterOption8880", "Report", FormMethod.Post, new { id = "Report" }))
{

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <input type="button" id="showDiv" class="btn btn-flat" value="+ Show Filter" />
            </header>
            <div class="panel-body" id="hideDiv">
                <form role="form">


                    <div class="row">
                        <div class="col-lg-12">
                            <label>Date First Cut</label>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                @Html.DropDownList("DateFirstCost", new List<SelectListItem> {
                 new SelectListItem {Text="*All Records",Value="*All Records" },
                new SelectListItem {Text="Between Range",Value="Between Range" },
               new SelectListItem {Text="Exact match",Value="Exact match" },
               new SelectListItem {Text="Greater Then",Value="Greater Then" },
               new SelectListItem {Text="Less Then",Value="Less Then" },
                }, new { @class = "form-control", @id = "ddlDateFirstCost", @onchange = "SelectDateFirstCost()" })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="input-group" id="divDateFirstCost_Beg">
                                    @*<input type="text" id="DateShipped1" name="DateShipped1" value="*All Records" disabled>*@
                                    <input type="text" class="form-control" id="DateFirstCost_Beg" name="DateFirstCost_Beg" value="@ViewBag.DateFirstCost_Beg" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                    @*<span class="input-group-btn" style="display:table-cell;"> </span>*@
                                </div>

                                <div class="input-group" id="div_txtDateFirstCost_Beg" style="width:100%;">
                                    <input type="text" class="form-control" id="txtDateFirstCost_Beg" name="txtDateFirstCost_Beg" value="@ViewBag.txtDateFirstCost_Beg" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                </div>

                            </div>
                        </div>


                        <div class="col-lg-4">
                            <div class="form-group">

                                <div class="input-group" id="divDateFirstCost_End">
                                    @*<input type="text" id="DateShipped2" name="DateShipped2" value="0" disabled>*@
                                    <input type="text" class="form-control" id="DateFirstCost_End" value="@ViewBag.DateFirstCost_End" name="DateFirstCost_End" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>
                                </div>
                                <div class="input-group" id="div_txtDateFirstCost_End" style="width:100%;">
                                    <input type="text" class="form-control" id="txtDateFirstCost_End" name="txtDateFirstCost_End" value="@ViewBag.txtDateFirstCost_End" readonly>
                                    <span class="input-group-addon fa fa-calendar" style="display:table-cell;"> </span>

                                </div>
                            </div>
                        </div>

                    </div><!--/row-->


                    <div class="form-group">
                        <div class="col-lg-12">
                            @*<button class="btn btn-primary">Submit</button>*@
                            <input type="submit" class="btn btn-primary" name="filter" id="btnSubmit" value="Run Report Now" />

                            &nbsp;&nbsp;&nbsp;&nbsp;
                            @*<input type="button" class="btn btn-primary " value="Asyn Generate Report" onclick="location.href='@Url.Action("RunReportAsyn", "Report")'" />*@
                            <input type="submit" class="btn btn-primary" name="filter" id="btnSubmit" onclick="return MessageShow()" value="Run as a Job and Notify" />


                        </div>
                    </div>
                </form>

            </div>
        </section>
    </div>


            <!--Report-->
    <div>

        @if (ViewBag.Filter == "Run Report Now")
        {
            <section class="panel">
                <div class="panel-body table-responsive">
                    <div id="reportData" style="width:100%;height:600px;overflow:scroll;">
                        @using ReportViewerForMvc;
                        @{
                            ViewBag.Title = "VSP7170";
                        }

                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { height = "560px", width = "100%" })

                    </div>
                </div>
            </section>
                            }


    </div>

                            }
